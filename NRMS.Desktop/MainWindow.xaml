<Window x:Class="NRMS.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NRMS Demo" Height="820" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock FontSize="22" FontWeight="SemiBold" Text="Numbering Resource Management System (NRMS) — Demo"/>
            <TextBlock Opacity="0.75"
                       Text="Cases + Evidence + Audit (SQLite) and Numbering Model (Slice 5, in-memory)."/>
        </StackPanel>

        <!-- Controls -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#DDDDDD" Padding="10" CornerRadius="6" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Create/Open -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock FontWeight="SemiBold" Text="Create Case"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Width="110" VerticalAlignment="Center" Text="Created By"/>
                        <TextBox x:Name="CreatedByTextBox" Width="250"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Width="110" VerticalAlignment="Center" Text="Case Type"/>
                        <ComboBox x:Name="CaseTypeComboBox" Width="250"/>
                    </StackPanel>

                    <Button x:Name="CreateCaseButton" Content="Create Case" Width="150" Margin="0,10,0,0" Click="CreateCaseButton_Click"/>

                    <Separator Margin="0,12,0,12"/>

                    <TextBlock FontWeight="SemiBold" Text="Open Case"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Width="110" VerticalAlignment="Center" Text="Case Reference"/>
                        <TextBox x:Name="OpenCaseReferenceTextBox" Width="250"/>
                    </StackPanel>

                    <Button x:Name="OpenCaseButton" Content="Open Case" Width="150" Margin="0,10,0,0" Click="OpenCaseButton_Click"/>
                </StackPanel>

                <!-- Middle: Attach evidence -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock FontWeight="SemiBold" Text="Attach Evidence"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Width="110" VerticalAlignment="Center" Text="Source"/>
                        <TextBox x:Name="SourceDescriptionTextBox" Width="250"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Width="110" VerticalAlignment="Center" Text="Selected File"/>
                        <TextBox x:Name="SelectedFileTextBox" Width="250" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="PickFileButton" Content="Pick File..." Width="120" Click="PickFileButton_Click"/>
                        <Button x:Name="AttachEvidenceButton" Content="Attach" Width="120" Margin="10,0,0,0" Click="AttachEvidenceButton_Click"/>
                    </StackPanel>

                    <Separator Margin="0,12,0,12"/>

                    <Button x:Name="ReloadAuditButton" Content="Reload Audit Trail" Width="160" Click="ReloadAuditButton_Click"/>
                </StackPanel>

                <!-- Right: Current case -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock FontWeight="SemiBold" Text="Current Case"/>
                    <TextBlock Margin="0,8,0,0" Text="Case Reference"/>
                    <TextBox x:Name="CaseReferenceTextBox" Width="280" IsReadOnly="True"/>
                    <TextBlock Margin="0,8,0,0" Text="Case ID"/>
                    <TextBox x:Name="CaseIdTextBox" Width="280" IsReadOnly="True"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main grids -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: Evidence + Audit -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontWeight="SemiBold" Text="Evidence Items"/>
                <DataGrid Grid.Row="1" x:Name="EvidenceDataGrid" Margin="0,8,0,10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Imported At (UTC)" Binding="{Binding ImportedAtUtc}" Width="180"/>
                        <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="220"/>
                        <DataGridTextColumn Header="SHA-256" Binding="{Binding Sha256}" Width="360"/>
                        <DataGridTextColumn Header="Stored Path" Binding="{Binding StoredPath}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="2" FontWeight="SemiBold" Text="Audit Trail"/>
                <DataGrid Grid.Row="3" x:Name="AuditDataGrid" Margin="0,8,0,10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Occurred At (UTC)" Binding="{Binding OccurredAtUtc}" Width="180"/>
                        <DataGridTextColumn Header="Event Type" Binding="{Binding EventType}" Width="160"/>
                        <DataGridTextColumn Header="Actor" Binding="{Binding Actor}" Width="160"/>
                        <DataGridTextColumn Header="Object" Binding="{Binding ObjectSummary}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="4" x:Name="StatusTextBlock" Opacity="0.8"/>
            </Grid>

            <!-- Right column: Numbering (Slice 5) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="220"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontWeight="SemiBold" Text="Numbering (Slice 5) — Operator, Blocks, Allocation"/>

                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#DDDDDD" Padding="10" CornerRadius="6" Margin="0,8,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Operator -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock FontWeight="SemiBold" Text="Create Operator"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="Name"/>
                                <TextBox x:Name="OperatorNameTextBox" Width="240"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="License #"/>
                                <TextBox x:Name="OperatorLicenseTextBox" Width="240"/>
                            </StackPanel>
                            <Button x:Name="CreateOperatorButton" Content="Create Operator" Width="150" Margin="0,10,0,0" Click="CreateOperatorButton_Click"/>
                        </StackPanel>

                        <!-- Blocks + allocation -->
                        <StackPanel Grid.Column="1">
                            <TextBlock FontWeight="SemiBold" Text="Add Block + Allocate"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="Number Type"/>
                                <ComboBox x:Name="NumberTypeComboBox" Width="240"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="Start"/>
                                <TextBox x:Name="BlockStartTextBox" Width="240"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="End"/>
                                <TextBox x:Name="BlockEndTextBox" Width="240"/>
                            </StackPanel>
                            <Button x:Name="AddBlockButton" Content="Add Block" Width="120" Margin="0,10,0,0" Click="AddBlockButton_Click"/>

                            <Separator Margin="0,12,0,12"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="Operator Id"/>
                                <TextBox x:Name="AllocateOperatorIdTextBox" Width="240"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Width="110" VerticalAlignment="Center" Text="Block Id"/>
                                <TextBox x:Name="AllocateBlockIdTextBox" Width="240"/>
                            </StackPanel>
                            <Button x:Name="AllocateBlockButton" Content="Allocate Block" Width="120" Margin="0,10,0,0" Click="AllocateBlockButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="2" FontWeight="SemiBold" Text="Blocks (in-memory)"/>
                <DataGrid Grid.Row="2" x:Name="BlocksDataGrid" Margin="0,28,0,10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="BlockId" Binding="{Binding BlockId}" Width="260"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding NumberType}" Width="120"/>
                        <DataGridTextColumn Header="Range" Binding="{Binding Range}" Width="180"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="3" FontWeight="SemiBold" Text="Allocations (in-memory)"/>
                <DataGrid Grid.Row="4" x:Name="AllocationsDataGrid" Margin="0,8,0,0" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="AllocationId" Binding="{Binding AllocationId}" Width="260"/>
                        <DataGridTextColumn Header="BlockId" Binding="{Binding BlockId}" Width="260"/>
                        <DataGridTextColumn Header="OperatorId" Binding="{Binding OperatorId}" Width="260"/>
                        <DataGridTextColumn Header="AllocatedAtUtc" Binding="{Binding AllocatedAtUtc}" Width="200"/>
                        <DataGridTextColumn Header="ExpiresAtUtc" Binding="{Binding ExpiresAtUtc}" Width="200"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
